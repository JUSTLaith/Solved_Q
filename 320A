#include<iostream>
#include<vector>
#include<string>
using namespace std;
int main()
{
	string num;
	int M=0;
	cin>>num;
	
	if(num.find("444")==string::npos)
	{
		for(int i=0;i<num.length();i++)
			if(num[i]=='1' || num[i]=='4') M++;
	}	
	
	if(num.find("444")!=string::npos || M!=num.length() || num[0]=='4')
		cout<<"NO"<<endl;
	else

	if(M==num.length())
		cout<<"YES"<<endl;

	return 0;
}
