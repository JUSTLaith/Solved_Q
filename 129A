#include <iostream>
#include <vector>
#include <algorithm>
#include <cstdlib>
#include <string>
#include <cctype>
#include <cstdio>
#include <cmath>
#include <queue> 
using namespace std;


int main()
{
	int nb,nc,s=0,C=0;
	cin>>nb;
	vector<int>T(nb);
	for(int i=0;i<nb;i++)
	{
		cin>>T[i];s+=T[i];
	}
	for(int i=0;i<nb;i++)
	{
		if((s-T[i])%2==0)
			C++;
	}
	cout<<C++<<endl;
	return 0;
}
