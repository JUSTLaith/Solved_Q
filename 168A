#include<iomanip>
using namespace std;
int main ()
{
	int n,x,y;
	double t;
	cin>>n>>x>>y;
	t=ceil((n*y)/100.0)-x;
	if(t>0)
		cout<<t<<endl;
	else
		cout<<0<<endl;	
	return 0;
}
